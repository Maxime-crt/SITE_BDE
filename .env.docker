# ============================================
# Configuration Docker pour Site BDE
# Copier ce fichier vers .env et adapter les valeurs
# ============================================

# Environnement
NODE_ENV=production
PORT=5000

# PostgreSQL
POSTGRES_USER=sitebde
POSTGRES_PASSWORD=sitebde_password_change_me
POSTGRES_DB=sitebde

# JWT (Générez une clé sécurisée en production!)
# Utilisez: openssl rand -base64 64
JWT_SECRET=change-me-to-a-secure-random-string-in-production

# Frontend URL pour CORS
FRONTEND_URL=http://localhost:5000

# Email (optionnel)
EMAIL_USER=
EMAIL_PASSWORD=

# Auto-admin emails (séparés par des virgules)
AUTO_ADMIN_EMAILS=admin@example.com

# Sécurité
BCRYPT_ROUNDS=12
